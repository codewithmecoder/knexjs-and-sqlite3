<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"> Messages</h1> 
      <form action="/api/lessons/<%= id %>/messages" method="POST">
        <div class="form-group">
          <label for="addhomework">Add Homework</label>
          <input 
            type="text"
            id="messages"
            name="text"
            class="form-control"
            placeholder="Your message here ..."
            >
            <br>
            <input 
            type="text"
            id="sender"
            name="sender"
            class="form-control"
            placeholder="Your name here..."
            >
        </div>
        <button type="submit" class="btn btn-primary btn-block">Create homework</button>
      </form>
    </div>
  </div>
</div>
<br><br>
<input
type="text" 
  id="myInput" 
  onkeyup="myFunction()" 
  placeholder="Search" 
  class="form-control mr-sm-2" 
  aria-label="Search"
  type="search">
<br>
<table id="myTable">
  <tr class="header">
    <th style="width:20%;">Sender</th>
    <th style="width:80%;">Message</th>
  </tr>
  <% messages.forEach(message => { %>
    <tr>
      <td><%= message.sender %></td>
      <td><%= message.text %></td>
    </tr>
  <% }) %>
</table>
